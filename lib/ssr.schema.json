{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.openarcloud.org/ssr.schema.json",
  "title": "SSR",
  "description": "Spatial Service Record",

  "definitions": {
    "service": {
      "id": "#service",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "default": ""
        },
        "type": {
          "type": "string",
          "enum": [ "geopose", "content-discovery" ],
          "default": ""
        },
        "title": {
          "type": "string",
          "default": ""
        },
        "description": {
          "type": "string",
          "default": ""
        },
        "url": {
          "type": "string",
          "format": "uri",
          "default": ""
        },
        "capabilities": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          }
        }
      },
      "required": [ "id", "type", "url", "capabilities"]
    },
    "coordinate": {
      "id": "#coordinate",
      "type": "array",
      "items": {
        "type": "number"
      }
    }
  },

  "type": "array",
  "items": {
	"type": "object",
	"properties": {
	  "id": {
	    "type": "string",
	    "default": ""
	  },
	  "type": {
	    "const": "ssr",
	    "default": "ssr"
	  },
	  "services": {
	    "type": "array",
	    "default": [{
		  "id": "",
		  "type": "",
		  "url": "",
		  "title": "",
		  "capabilities": ""
		}],
		"items": {
		  "ref": "#service"
		}
		},
	  "geometry": {
	    "type": "object",
	    "properties": {
		  "type": {
		    "type": "string",
		    "default": ""
		  },
	      "coordinates": {
	        "type": "array",
		    "items": {
		    "type": "array",
		      "items": {
			    "default": [
				  0.0,
				  0.0
			    ],
		        "ref": "#coordinate"
		      }
		    }
		  }
		}
	  },
	  "altitude": {
	    "type": "number",
	    "default": ""
	  },
	  "provider": {
	    "type": "string",
	    "default": ""
	  },
	  "timestamp": {
	    "type": "string",
	    "format": "date-time",
	    "default": ""
	  }
	},
	"required": [ "id", "type", "services", "geometry", "provider", "timestamp" ]
  }
}