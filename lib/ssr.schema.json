{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.openarcloud.org/ssr.schema.json",
  "title": "SSR",
  "description": "Spatial Service Record (SSR)",

  "$defs": {
    "property": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": ""
        },
        "value": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["type", "value"]
    },
    "service": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "default": ""
        },
        "type": {
          "type": "string",
          "enum": [ "geopose", "content-discovery", "p2p-master" ],
          "default": ""
        },
        "title": {
          "type": "string",
          "default": ""
        },
        "description": {
          "type": "string",
          "default": ""
        },
        "url": {
          "type": "string",
          "format": "uri",
          "default": ""
        },
        "properties": {
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/$defs/property"
          }
        }
      },
      "required": [ "id", "type", "title", "url"]
    }
  },

  "type": "object",
  "properties": {
    "type": {
      "const": "ssr",
      "default": "ssr"
    },
    "services": {
      "type": "array",
      "default": [{
        "id": "",
        "type": "",
        "url": "",
        "title": "",
        "description": "",
        "properties": []
      }],
      "items": {
        "$ref": "#/$defs/service"
      }
    },
    "geometry": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Polygon"
          ]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 4,
            "items": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "number"
              }
            }
          }
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "altitude": {
      "type": "number",
      "default": ""
    },
    "provider": {
      "type": "string",
      "default": "provider"
    },
    "active": {
      "type": "boolean",
      "default": true
    }
  },
  "required": [ "type", "services", "geometry" ]
}
